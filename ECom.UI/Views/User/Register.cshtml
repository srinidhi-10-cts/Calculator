@model ECom.UI.Models.UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-dark text-white text-center py-4 rounded-top-lg">
                    <h4 class="mb-0">Create Your Account üõçÔ∏è</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="User" asp-action="Register" method="post">
                        <div class="form-group mb-2">
                            <label asp-for="UserId" class="form-label font-weight-bold">User ID</label>
                            <input asp-for="UserId" class="form-control" placeholder="Choose a unique User ID" />
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Username" class="form-label font-weight-bold">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="What should we call you?" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Email" class="form-label font-weight-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-2">
                            <label asp-for="Password" class="form-label font-weight-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="fas fa-user-plus me-1"></i> Register Now
                        </button>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-2">
                    <small class="text-muted">
                        Already have an account? <a href="/User/Login" class="text-decoration-none">Login here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
